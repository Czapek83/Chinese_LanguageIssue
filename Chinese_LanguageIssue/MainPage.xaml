<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Chinese_LanguageIssue.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:strings="clr-namespace:Chinese_LanguageIssue.Resources.Strings">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Image
                Source="dotnet_bot.png"
                Aspect="AspectFit"
                HeightRequest="185"
                SemanticProperties.Description="dot net bot in a race car number eight" />

            <Label
                HorizontalOptions="Fill"
                Text="{x:Static strings:Strings.SampleText}" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
